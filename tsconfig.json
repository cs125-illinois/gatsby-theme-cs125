{
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "./typings.d.ts"],
    "baseUrl": "."
  }
}
